{
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3.8"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "electron": "^1.3.3",
    "electron-debug": "^1.0.1",
    "electron-window-state": "^3.0.4",
    "history": "^2.1.2",
    "react": "^15.3.0",
    "react-addons-css-transition-group": "^15.3.1",
    "react-desktop": "^0.2.12",
    "react-dom": "^15.3.0",
    "react-polymer": "^2.0.5",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "electron-react-app-scripts": "^0.0.5",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-logger": "^2.6.1"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-1"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "electron-react-app clean-cache",
    "lint": "eslint src app",
    "lint:fix": "eslint --fix src app",
    "build": "electron-react-app build",
    "start": "electron-react-app start"
  }
}
